# Application Settings
APP_NAME=WellbeingMonitor
APP_VERSION=1.0.0
DEBUG=false

# Server Settings
HOST=0.0.0.0
PORT=8071

# Database Settings (TimescaleDB/PostgreSQL)
DATABASE_URL=postgresql+asyncpg://postgres:postgres@localhost:5432/wellbeing_monitor

# Database Connection Pool Settings
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20
DATABASE_POOL_TIMEOUT=30
DATABASE_POOL_RECYCLE=3600

# CORS Settings
CORS_ORIGINS=["*"]
CORS_CREDENTIALS=true
CORS_METHODS=["*"]
CORS_HEADERS=["*"]

# Logging Settings
LOG_LEVEL=INFO
LOG_FORMAT=json

# API Settings
API_PREFIX=/api/v1

# Data Retention Settings (in days)
WELLBEING_INDICATOR_RETENTION_DAYS=730
SURVEY_RETENTION_DAYS=1095
ACTIVITY_LOG_RETENTION_DAYS=365

# Survey Settings
MAX_SURVEY_QUESTIONS=50
MAX_SURVEY_RESPONSES_PER_BATCH=100

# Activity Log Settings
MAX_ACTIVITY_LOGS_PER_BATCH=1000
ACTIVITY_LOG_BATCH_SIZE=100
