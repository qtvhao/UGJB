# Service Configuration
ENVIRONMENT=development
SERVICE_NAME=burnout-predictor
SERVICE_VERSION=1.0.0

# Server Ports
REST_HOST=0.0.0.0
REST_PORT=8072
GRPC_HOST=0.0.0.0
GRPC_PORT=50054

# Model Configuration
MODEL_PATH=/app/models/burnout_model.pkl
MODEL_VERSION=1.0.0
MODEL_TYPE=XGBoost

# Risk Level Thresholds
RISK_THRESHOLD_LOW=0.3
RISK_THRESHOLD_MEDIUM=0.5
RISK_THRESHOLD_HIGH=0.7

# Kafka Configuration
KAFKA_ENABLED=true
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_HIGH_RISK_ALERTS=burnout.high-risk-alerts
KAFKA_TOPIC_PREDICTIONS=burnout.predictions

# Alert Configuration
ALERT_ENABLED=true
ALERT_HIGH_RISK_THRESHOLD=0.7

# Model Training Configuration
TRAINING_ENABLED=true
MIN_TRAINING_SAMPLES=100
MODEL_VALIDATION_SPLIT=0.2

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json

# Monitoring Configuration
METRICS_ENABLED=true
METRICS_PORT=9090

# CORS Configuration
CORS_ORIGINS=["*"]

# Database Configuration (optional)
DATABASE_ENABLED=false
DATABASE_URL=postgresql://user:password@localhost:5432/burnout_predictor
