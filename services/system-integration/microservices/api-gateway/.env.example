# API Gateway Environment Variables

# General
ENVIRONMENT=development
PORT=8060

# JWT Configuration
JWT_SECRET_KEY=your-secret-key-here
JWT_TOKEN_DURATION=15m
JWT_REFRESH_DURATION=168h
JWT_ISSUER=ugjb-api-gateway

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MIN=100
RATE_LIMIT_BURST_SIZE=20

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# OPA Configuration
OPA_ENABLED=true
OPA_POLICY_PATH=./policies
OPA_BUNDLE_URL=

# Backend Services
SERVICES_PROJECT_MANAGEMENT_BASE_URL=http://localhost:8061
SERVICES_PROJECT_MANAGEMENT_TIMEOUT=30s

SERVICES_GOAL_MANAGEMENT_BASE_URL=http://localhost:8062
SERVICES_GOAL_MANAGEMENT_TIMEOUT=30s

SERVICES_HR_MANAGEMENT_BASE_URL=http://localhost:8063
SERVICES_HR_MANAGEMENT_TIMEOUT=30s

SERVICES_ENGINEERING_ANALYTICS_BASE_URL=http://localhost:8064
SERVICES_ENGINEERING_ANALYTICS_TIMEOUT=30s

SERVICES_WORKFORCE_WELLBEING_BASE_URL=http://localhost:8065
SERVICES_WORKFORCE_WELLBEING_TIMEOUT=30s
